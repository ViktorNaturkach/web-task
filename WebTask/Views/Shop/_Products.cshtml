@model WebTask.ViewModels.Shop.IndexViewModel
<input type="hidden" id="newItemsCount" value=@Model.Products.Count()>
<input type="hidden" id="newProductsCount" value=@Model.TotalProducts>
<div class="product-list">
    <div class="row">
        @foreach (var p in Model.Products)
        {
            <div class="col-lg-4 col-sm-6">
                <div class="product-item">
                    <div class="pi-pic">
                        <img src="~/img/products/@p.ImageSrc" alt="">
                        <div class="sale pp-sale">Sale</div>
                        <div class="icon">
                            <i class="icon_heart_alt"></i>
                        </div>
                        <ul>
                            <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                            <li class="quick-view"><a href="#">+ Quick View</a></li>
                            <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                        </ul>
                    </div>
                    <div class="pi-text">
                        <div class="catagory-name">Category</div>
                        <a href="#">
                            <h5>@p.Name</h5>
                        </a>
                        <div class="product-price">
                            $@p.SalePrice.ToString("F2")
                            <span>$@p.Price.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>