@model WebTask.ViewModels.Product.UpdateDetailsViewModel
<!-- Product Shop Section Begin -->
<section class="product-shop spad page-details">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="product-pic-zoom">
                            <img class="product-big-img" src="~/img/product-single/@Model.BigImageSrc" alt="">
                            <div class="zoom-icon">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <form asp-controller="Product" asp-action="UpdateDetails">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="product-details">
                                <div class="pd-title">
                                    <span>
                                        <select asp-for="@Model.Category.Id" asp-items="@Model.AllCategories"></select>
                                    </span>
                                    <h3>
                                        <input asp-for="@Model.Name" type="text">
                                        <span asp-validation-for="@Model.Name"></span>
                                    </h3>
                                </div>
                                <div class="pd-desc">
                                    <p>
                                        <textarea asp-for="@Model.Description" rows="5" cols="100"></textarea>
                                        <span asp-validation-for="@Model.Description"></span>
                                    </p>
                                    <h4>
                                        <input id="SalePrice" asp-for="@Model.Price" type="text" value="@Model.Price.ToString("F2")">
                                        <input id="Price" asp-for="@Model.SalePrice" type="text" value="@Model.SalePrice.ToString("F2")">
                                        <span asp-validation-for="@Model.Price"></span>

                                        <span asp-validation-for="@Model.SalePrice"></span>
                                    </h4>
                                </div>
                                <div class="form-group">
                                    <div class="pdc-size-choose">
                                        @for (Int32 i = 0; i < this.Model.AllSizes.Count; i++)
                                        {
                                        <div class="sc-item">
                                            <input type="checkbox" asp-for="@Model.AllSizes[i].Cheked" />
                                            @if (@Model.AllSizes[i].Cheked)
                                            {
                                                <label asp-for="@Model.AllSizes[i].Cheked" class="active">@Model.AllSizes[i].Name</label>
                                            }
                                            else
                                            {
                                                <label asp-for="@Model.AllSizes[i].Cheked">@Model.AllSizes[i].Name</label>
                                            }

                                            <input type="hidden" asp-for="@Model.AllSizes[i].Id" />
                                            <input type="hidden" asp-for="@Model.AllSizes[i].Name" />
                                            <br />
                                        </div>
                                         }
                                     </div>
                                   </div>
                                <ul class="pd-tags">
                                    <li><span>TYPES</span>:</li>
                                </ul>
                                <div class="fw-brand-check">
                                    <div class="form-group">
                                        @for (Int32 i = 0; i < this.Model.AllTypes.Count; i++)
                                        {
                                            <input type="checkbox" asp-for="@Model.AllTypes[i].Cheked" />
                                            <label asp-for="@Model.AllTypes[i].Cheked">@Model.AllTypes[i].Name</label>
                                            <input type="hidden" asp-for="@Model.AllTypes[i].Id" />
                                            <input type="hidden" asp-for="@Model.AllTypes[i].Name" />
                                            <br />
                                        }
                                    </div>
                                </div>
                                <div class="quantity">
                                    <button type="submit" class="primary-btn pd-cart">Save changes</button>
                                </div>
                                <div class="pd-share">
                                    <div class="p-code">Sku : @Model.Id.ToString().PadLeft(5, '0')</div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="product-tab">
                    <div class="tab-item">
                        <ul class="nav" role="tablist">
                            <li>
                                <a class="active" data-toggle="tab" href="#tab-1" role="tab">Customer Reviews (02)</a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-item-content">
                        <div class="tab-content">
                            <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                                <div class="customer-review-option">
                                    <h4>2 Comments</h4>
                                    <div class="product-content">
                                        <div class="co-item">
                                            <div class="avatar-pic">
                                                <img src="~/img/product-single/avatar-1.png" alt="">
                                            </div>
                                            <div class="avatar-text">
                                                <h5>Brandon Kelley <span>27 Aug 2019</span></h5>
                                                <div class="at-reply">Nice !</div>
                                            </div>
                                        </div>
                                        <div class="co-item">
                                            <div class="avatar-pic">
                                                <img src="~/img/product-single/avatar-2.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="leave-comment">
                                        <h4>Leave A Comment</h4>
                                        <form action="#" class="comment-form">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <input type="text" placeholder="Name">
                                                </div>
                                                <div class="col-lg-6">
                                                    <input type="text" placeholder="Email">
                                                </div>
                                                <div class="col-lg-12">
                                                    <textarea placeholder="Messages"></textarea>
                                                    <button type="submit" class="site-btn">Send message</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Shop Section End -->
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/product.js"></script>

